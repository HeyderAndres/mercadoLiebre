<!DOCTYPE html>
<html lang="en">

<%-include ('../partials/head.ejs');%>

<body>
    <%- include ('../partials/header.ejs') %>
    <main>
        <section class="product-detail">
            <article>
                <img src="/images/products/<%=locals.product && product.image?product.image:''%>" alt="">
            </article>
            <article class="product-information">
                <ul>
                    <li><p class="nombre"><strong><%=locals.product && product.name?product.name:''%></strong></p></li>
                    <li><p class="precio"> $<%=locals.product && product.price?product.price:''%></p></li>
                    <li><p class="descuento">$<%=locals.product && product.price?product.price:''%></p></li>
                    <li><p><%=locals.product && product.description?product.description:''%></p></li>
                    <% if (locals.isLoggued==false || locals.userLoggued.perfilUsuario == "comprador") { %>
                    <li><input type="button" value="Comprar"></li>
                   <% }else{ %>
                    <div class="product-button">
                    <form action="/products/edit/<%=product.id %> ">
                        <div><button type="submit">Editar</button></div>
                    </form>
                    <form action="/products/delete/<%=product.id %>">
                        <div><button type="submit">Eliminar</button></div>
                    </form>
                    </div>
                    <% } %> 
                </ul>
            </article>
        </section>
    </main>
    <%-include ('../partials/footer');%>
</body>

</html>